---
import { Image } from "astro:assets";
const {product} = Astro.props
const { id } = product;
const { title, description, mainImg } = product.data;

---

<div class="flex flex-col gap-3 p-3 bg-white shadow-xl max-w-80">
   <Image
      src={`/img/main/${mainImg}`}
      alt={`Imagen ${title}`}
      width={300}
      height={300}
      class="rounded-md w-full max-w-64 mx-auto"
   />
   <div class="p-3">
      <h4 class="text-lg font-semibold uppercase text-gray-800">
         {title}
      </h4>
      <p>{description}</p>
   </div>
   <a href={`/product/${id}`} class="mt-auto">
      <button class="bg-green-900 text-green-200 px-4 py-2 rounded hover:bg-green-800 duration-200 p-3 w-full  mt-2 font-bold text-lg">
         Ver m√°s
      </button>
   </a>
</div>
