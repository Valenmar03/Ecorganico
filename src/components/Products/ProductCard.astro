---
const { product, index } = Astro.props;
const { id } = product;
const { title, description, mainImg, supplier } = product.data;
---

<div
   class={`w-full ${index % 2 === 0 ? "bg-white" : "bg-gray-100"} p-10 flex justify-around items-center`}
>
   <div>
      <h3
         class="text-3xl font-semibold uppercase text-center "
      >
         {title}
      </h3>
      <p class="text-center">{description}</p>
   </div>
   <img
      src={`/img/${mainImg}`}
      alt={`Imagen ${title}`}
      class="w-64 rounded-md shadow-2xl"
   />
</div>
