---
const { product } = Astro.props;
const { id } = product;
const { title, mainImg, description } = product.data;
---

<div class="flex flex-col gap-3 p-3 bg-white shadow-xl max-w-96">
   <img
      src={`/img/main/${mainImg}`}
      alt={`Imagen ${title}`}
      class="rounded-md w-full max-w-72 mx-auto"
   />
   <div class="p-3">
      <h4 class="text-lg font-semibold uppercase text-gray-800">{title}</h4>
      <p>{description}</p>
   </div>
   <a href={`/products/${id}`} class="mt-auto">
      <button
         class="bg-green-900 p-3 w-full rounded mt-2 hover:bg-green-800 duration-200 text-green-200 font-bold text-lg"
      >
         Ver m√°s
      </button>
   </a>
</div>
