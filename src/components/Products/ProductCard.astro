---
const { product } = Astro.props;
const { id, body } = product;
const { title, description, mainImg, variants } = product.data;
---

<div class="flex flex-col gap-3 bg-white p-3 shadow-xl">
   <a href={`/product/${id}`} class="overflow-hidden rounded-md max-w-72">
      <img
         src={`/img/main/${mainImg}`}
         alt={`Imagen ${title}`}
         class="rounded-md w-full hover:scale-110 duration-500"
      />
   </a>
   <div class="max-w-72">
      <h4 class="text-lg font-semibold uppercase text-gray-800">{title}</h4>
      <p class="">{description}</p>
   </div>
</div>
