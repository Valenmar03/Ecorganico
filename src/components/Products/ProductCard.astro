---
const { product, index } = Astro.props;
const { id, body } = product;
const { title, description, mainImg, variants } = product.data;
---

<div
   class={`w-full ${index % 2 === 0 ? "bg-white" : "bg-gray-100"} p-10 flex justify-around items-center`}
>
{
    index % 2 === 0 ? (
        <div>
            <h3
                class="text-3xl font-semibold uppercase text-center "
            >
                {title}
            </h3>
            <p class="prose text-gray-900">{body}</p>
            <p>Variantes: </p>
            <ul>
                {variants.map((variant : String) =>
                <li>
                    {variant}
                </li>
                )}
            </ul>
        </div>
        <img
            src={`/img/${mainImg}`}
            alt={`Imagen ${title}`}
            class="rounded-md"
        />
    ) : (
        <img
            src={`/img/${mainImg}`}
            alt={`Imagen ${title}`}
            class="rounded-md"
        />
        <div>
            <h3
                class="text-3xl font-semibold uppercase text-center "
            >
                {title}
            </h3>
            <p class="prose text-gray-900">{body}</p>
            <p>Variantes: </p>
            <ul>
                {variants.map((variant : String) =>
                <li>
                    {variant}
                </li>
                )}
            </ul>
        </div>
   )
}
   
</div>
